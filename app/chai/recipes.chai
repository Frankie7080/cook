auto langs = ["chai"]

for_each(langs, fun(l) {
    root.recipe("cook/app/${l}/exe", "executable", fun(r) {
        r.depends_on("lib/api")
        r.depends_on("chai/func")
        r.add("src", "**.[hc]pp")

        r.library("dl")
        r.library("pthread")
        r.library("stdc++fs")
    })
})
