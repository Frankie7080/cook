auto langs = ["chai"]

for_each(langs, fun(l) {
    root.recipe("cook/app/${l}/exe", "executable", fun(r) {
        r.depends_on("cook/func")
        r.depends_on("chai/func")
        r.add("src", "**/*.hpp")
        r.add("src", "**.cpp")
        
        r.library("dl")
        r.library("pthread")
        r.library("stdc++fs")
    })
})
