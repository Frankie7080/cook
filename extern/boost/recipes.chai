include("dependencies.chai")

root.recipe("boost/all", fun[boosts](r) {
    for_each(boosts, fun[r](b) {
        r.add("modules/${b}/include", "boost/**.hpp")
        #r.include_path("modules/${b}/include")
    })
    if (my(OS) == OS.Windows)
    {
        r.add("modules/filesystem/src", "*.cpp")
        r.define("BOOST_ALL_NO_LIB")
        r.define("BOOST_CONFIG_SUPPRESS_OUTDATED_MESSAGE")
    }
    
    r.define("BOOST_ERROR_CODE_HEADER_ONLY")
})
