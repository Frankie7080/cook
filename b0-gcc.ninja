rule compile
    depfile = $out.d
    command = g++ -std=c++17 -O3 $cflags $defines $include_paths -c $in -o $out -MMD -MF $out.d
rule archive
    command = ar $aflags $out $in
rule link
    command = g++ -o $out $in $library_paths $system_libs $user_libs

cflags = 

aflags = crf

system_libs = -ldl -lstdc++fs -lpthread

subninja b0-compile.ninja
