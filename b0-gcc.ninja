rule compile
    depfile = $out.d
    command = g++ -std=c++17 -fsanitize=address $cflags $defines $include_paths -c $in -o $out -MMD -MF $out.d
rule archive
    command = ar $aflags $out $in
rule link
    command = g++ -o $out $in $library_paths $user_libs_gcc $system_libs

#defines = -DNDEBUG
#cflags = -O3

defines = 
cflags = -g

aflags = crf

system_libs = -lasan -ldl -lstdc++fs -lpthread

subninja b0-compile.ninja
