rule compile
    command = cl -c $in /Fo:$out $cflags $defines $include_paths
rule link
    command = link /OUT:$out $in $user_libs_msvc
rule archive
    command = lib /OUT:$out $in

defines = -DNDEBUG -DBOOST_ERROR_CODE_HEADER_ONLY -DBOOST_ALL_NO_LIB
cflags = /nologo /EHsc /std:c++latest

subninja build/b0/compile.ninja
