msvc_deps_prefix = Note: including file:
rule compile
    deps = msvc
    command = cl -c $in /Fo:$out $cflags $defines $include_paths
rule archive
    command = lib /OUT:$out $in
rule link
    command = link /OUT:$out $in $user_libs_msvc

defines = -DBOOST_ERROR_CODE_HEADER_ONLY -DBOOST_ALL_NO_LIB -DBOOST_CONFIG_SUPPRESS_OUTDATED_MESSAGE -DNOMINMAX
cflags = /nologo /EHsc /std:c++latest /bigobj /showIncludes

subninja build/b0/compile.ninja
